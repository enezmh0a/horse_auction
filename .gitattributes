# Auto-detect text files and ensure consistent line endings
* text=auto

# Force LF for source & configs (Flutter/Dart likes LF)
*.dart   text eol=lf
*.yaml   text eol=lf
*.yml    text eol=lf
*.json   text eol=lf
*.md     text eol=lf
*.gradle text eol=lf
*.java   text eol=lf
*.kt     text eol=lf
*.js     text eol=lf
*.ts     text eol=lf
*.css    text eol=lf
*.html   text eol=lf
*.sh     text eol=lf

# Keep CRLF for Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Mark common binaries (no EOL conversion)
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.webp binary
*.ico  binary
*.pdf  binary
*.ttf  binary
*.otf  binary
*.zip  binary
*.7z   binary
*.mp4  binary
*.mov  binary
*.wav  binary
*.mp3  binary
*.exe  binary
*.dll  binary
windows/runner/*.cpp      text eol=lf
windows/runner/*.h        text eol=lf
windows/runner/*.rc       text eol=lf
windows/runner/*.manifest text eol=lf
